{
  "name": "xyzzy2-angular",
  "version": "1.0.0",
  "license": "CC-BY-NC-SA-2.0",
  "description": "Angular front-end repository for the Xyzzy2 project.",
  "author": "Patrick Housley <patrick.f.housley@gmail.com>",
  "repository": {
    "url": "https://github.com/patrickhousley/xyzzy2-angular",
    "type": "git"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "NODE_ENV=test jest --coverage",
    "lint": "npm run tslint && npm run stylelint",
    "tslint": "ng lint --typeCheck",
    "stylelint": "stylelint 'src/**/*.scss' --syntax scss --allow-empty-input",
    "e2e": "ng e2e",
    "precommit": "lint-staged"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.2.4",
    "@angular/cdk": "^2.0.0-beta.10",
    "@angular/common": "^4.2.4",
    "@angular/compiler": "^4.2.4",
    "@angular/core": "^4.2.4",
    "@angular/flex-layout": "^2.0.0-beta.9",
    "@angular/forms": "^4.2.4",
    "@angular/http": "^4.2.4",
    "@angular/material": "^2.0.0-beta.10",
    "@angular/platform-browser": "^4.2.4",
    "@angular/platform-browser-dynamic": "^4.2.4",
    "@angular/router": "^4.2.4",
    "@ngrx/effects": "^4.0.5",
    "@ngrx/router-store": "^4.0.4",
    "@ngrx/store": "^4.0.3",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.4.1",
    "hammerjs": "^2.0.8",
    "intl": "^1.2.5",
    "rxjs": "^5.4.2",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "1.3.2",
    "@angular/compiler-cli": "^4.2.4",
    "@angular/language-service": "^4.2.4",
    "@angular/platform-server": "^4.3.6",
    "@ngrx/store-devtools": "^4.0.0",
    "@types/jest": "^20.0.8",
    "@types/node": "~8.0.26",
    "codelyzer": "~3.1.1",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "jest-preset-angular": "^2.0.5",
    "lint-staged": "^4.0.4",
    "postcss": "^6.0.10",
    "prettier": "^1.6.1",
    "protractor": "~5.1.2",
    "rxjs-marbles": "^1.6.0",
    "rxjs-tslint-rules": "^2.1.4",
    "stylefmt": "^6.0.0",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "ts-node": "~3.3.0",
    "tslint": "~5.7.0",
    "typescript": "~2.5.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/src/test/jest-setup.ts",
    "collectCoverageFrom": [
      "src/app/**/*.{js,ts}",
      "!**/*.spec.ts",
      "!**/*.module.ts"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "./coverage",
    "testRegex": "\\.spec\\.(ts|js)$"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint --type-check --project tsconfig.json",
      "jest --findRelatedTests",
      "git add"
    ],
    "src/**/*.scss": [
      "stylefmt",
      "stylelint --syntax scss --allow-empty-input",
      "git add"
    ],
    "src/**/*.css": [
      "stylefmt",
      "stylelint --allow-empty-input",
      "git add"
    ]
  }
}
